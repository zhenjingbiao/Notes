<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="custom_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--杈规-->
        <item name="android:windowIsFloating">true</item><!--鏄惁娴幇鍦╝ctivity涔嬩笂-->
        <item name="android:windowIsTranslucent">false</item><!--鍗婇�忔槑-->
        <item name="android:windowNoTitle">true</item><!--鏃犳爣棰�-->
        <item name="android:windowBackground">@android:color/transparent</item><!--鑳屾櫙閫忔槑-->
        <item name="android:backgroundDimEnabled">false</item><!--妯＄硦-->
        
        
    </style>
    
    
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="TitleBarBackground">  
       <item name="android:background">@drawable/navigationbar_bg</item>  
    </style>  
            
     <style name="MyCustomTheme" parent="android:Theme">       
         <item name="android:windowTitleBackgroundStyle">@style/TitleBarBackground</item>  
         <item name="android:windowTitleSize">40dp</item>  
     </style>  

      
     
     
     
     
</resources>
